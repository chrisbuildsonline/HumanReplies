{
  "manifest_version": 3,
  "name": "HumanReplies",
  "version": "1.0.0",
  "description": "AI-powered reply generation for social media platforms",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:8000/*",
    "http://localhost:8005/*",
    "https://api.humanreplies.com/*",
    "https://staging-api.humanreplies.com/*",
    "https://text.pollinations.ai/*",
    "https://app.humanreplies.com/*",
    "https://anhcptguetscsoejzyed.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content-scripts/x-content.js"
      ],
      "css": [
        "styles.css"
      ],
      "type": "module"
    },
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content-scripts/linkedin-content.js"
      ],
      "css": [
        "styles.css"
      ],
      "type": "module"
    }
  ],
  "icons": {
    "16": "avatar.png",
    "32": "avatar.png",
    "48": "avatar.png",
    "128": "avatar.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "HumanReplies"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "auth-callback.html"
      ],
      "matches": [
        "https://anhcptguetscsoejzyed.supabase.co/*"
      ]
    }
  ]
}